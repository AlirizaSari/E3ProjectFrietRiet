<Window x:Class="FrietVanRietScreens.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrietVanRietScreens"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblGetApi"
               Content="Api komt hier"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Left"
               Margin="220, 0, 0, 220">
            
        </Label>

        <TextBox x:Name="txbApiGoesHere"
                 Text="Testing"
                 Width="350"
                 Height="150"
                 Background="LightGray"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Bottom"
                 Margin="150,0,0,125"
                 >
            
        </TextBox>

        <Button x:Name="btnGetApi"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Width="70"
                Height="25"
                Content="Get API"
                Click="btnGetApi_Click" 
                Margin="210,0,0,310">
            
        </Button>
    </Grid>
</Window>
