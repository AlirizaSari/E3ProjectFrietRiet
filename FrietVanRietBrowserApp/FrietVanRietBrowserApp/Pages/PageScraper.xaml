<Page x:Class="FrietVanRietBrowserApp.Pages.PageScraper"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrietVanRietBrowserApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="{x:Static SystemParameters.PrimaryScreenHeight}" d:DesignWidth="{x:Static SystemParameters.PrimaryScreenWidth}"
      Background="LightSeaGreen"
      Title="PageScraper">

    <Grid>
        <Button x:Name="btnGetScraper"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Height="20"
                Width="65"
                Content="Scrape me"
                Margin="120,0,0,20" Click="btnGetScraper_Click"/>

        <Label x:Name="lblMenuItems"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Margin="20,20,0,0"
               />
    </Grid>
</Page>
