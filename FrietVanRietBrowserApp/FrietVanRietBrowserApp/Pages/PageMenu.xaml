<Page x:Class="FrietVanRietBrowserApp.Pages.PageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrietVanRietBrowserApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="{x:Static SystemParameters.PrimaryScreenHeight}" 
      d:DesignWidth="{x:Static SystemParameters.PrimaryScreenWidth}"
      xmlns:cefsharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
      Background="LightBlue"
      Title="PageMenu">

    <Grid>
        <cefsharp:ChromiumWebBrowser x:Name="webFriet"
                                     Width="{x:Static SystemParameters.PrimaryScreenWidth}"
                                     Height="{x:Static SystemParameters.PrimaryScreenWidth}"
            Address="https://frietvanriet.foodticket.nl/foodticket/cgi/bestel.cgi" Loaded="webFriet_Loaded"/>

        
    </Grid>
</Page>
